{{!< default}}

{{> cover this}}

<section class="wrapper" tabindex="0">
  <div class="wrapper-container">
    {{> custom/featured this}}

    <section class="post-list">
      {{#get "posts" filter="featured:false" limit="all" as |unfeatured|}}
        {{#foreach unfeatured}}
          {{> post/blist this}}
        {{/foreach}}
      {{/get}}
    </section>

    {{#if pagination}}
      {{pagination}}
    {{/if}}

    {{> footer this}}
  </div>
</section>
